{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "packages/database/Dockerfile",
    "watchPatterns": ["Dockerfile"]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "limitOverride": {
      "containers": {
        "cpu": 1,
        "memoryBytes": 2000000000
      }
    },
    "sleepApplication": false,
    "multiRegionConfig": {
      "us-west1": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
